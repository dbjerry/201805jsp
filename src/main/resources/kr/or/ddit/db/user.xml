<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="jspUser">
	
	<select id="selectUserAll" resultType="userVo">
		SELECT * FROM jspuser
	</select>
	
	<select id="selectUser" parameterType="String" resultType="userVo">
		SELECT * FROM jspuser WHERE userid=#{userId}
	</select>
	
	<select id="selectUserByVo" parameterType="userVo" resultType="userVo">
		SELECT * FROM jspuser WHERE userid=#{userId}
	</select>
	
	<select id="userAllList" resultType="userVo">
		SELECT  ROWNUM "rnum",
		        userId,
		        name,
		        TO_CHAR(birth, 'yyyy-MM-dd') birth
		FROM    jspuser
	</select>
	
	<select id="selectUserPageList" parameterType="map" resultType="userVo">
		SELECT  *
		FROM    
		(SELECT  ROWNUM "rnum",
		        jspuser.*
		FROM    jspuser
		ORDER BY userId)
		WHERE   rnum between #{page} * #{pageSize} - (#{pageSize}-1) and #{page} * #{pageSize}
	</select>
	
</mapper>